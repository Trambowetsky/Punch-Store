@model IEnumerable<Domain.Entities.User>

@{ 
    ViewBag.Title = "Перелік адміністраторів";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 }

<h2>Адміністратори</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        Список адмінів
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Key)
                </th>
                <th class="text-center">
                    Дії
                </th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td class="text-right">
                @item.Id
            </td>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.GetPass)</td>
            <td>@Html.DisplayFor(modelItem => item.Key)</td>
            <td class="text-center">
                @using (Html.BeginForm("DeleteAcc", "Account"))
                {
                    @Html.Hidden("id", item.Id)
                    <input type="submit" class="btn btn-success" value="Видалити" />
                }
            </td>
        </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Повернутися", "Index", "Admin", null, new
        {
        @class = "btn btn-primary"
        })
        @Html.ActionLink("Зареєструвати адміністратора", "Register", "Account", null, new
        {
        @class = "btn btn-danger"
        })
    </div>
</div>
