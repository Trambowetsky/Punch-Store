@{
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "action-sum",
        Url = Url.Action("Summary", "Cart")
    };
}

<!DOCTYPE html>
<html style="min-height:100vh;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/4945acb709.js" crossorigin="anonymous"></script>
    <link href="~/Content/lightbox.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" crossorigin="anonymous">
    <link href="~/Content/carousel.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title </title>
</head>
<body style="padding-bottom:0px; min-height:100vh;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
            <img class="navbar-brand mt-0 mb-0"src="~/Content/logo1.png" height="45" width="60" href="/"/>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">На головну <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/About/Index">Про нас</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/About/Selling">Як замовити</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Контакти</a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-default"
                             aria-labelledby="navbarDropdownMenuLink-333">
                            <a class="dropdown-item"><img class="kyivstar" src="~/Content/kyivstar.png" width="20" height="20" />+380xxxxxxxxxx</a>
                            <a class="dropdown-item"><img class="lifecell" src="~/Content/lifecell.png" width="20" height="20" />+380xxxxxxxxxx</a>
                            <a class="dropdown-item"><img class="vodafone" src="~/Content/vodafone.png" width="20" height="20" />+380xxxxxxxxxx</a>
                        </div>
                    </li>
                    <li class="nav-item d-block d-lg-none">
                        <a class="nav-link" href="/Cart/Index">Кошик</a>
                    </li>
                </ul>
                @using (Ajax.BeginForm("Summary", "Cart", null, options, new { @class = "form-inline mt-2 mt-md-0 d-none d-lg-block" })) // добавить адаптивность на мобильных экранах
                {
                    <div id="action-sum">@Html.Action("Summary", "Cart")</div>
                }

            </div>
        </nav>
    </header>
    @if (Url.Action() == "/")
    {
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:0px;">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                <li data-target="#myCarousel" data-slide-to="2" class=""></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="cover" src="~/Content/boxing-3897488_1920.jpg" />
                    <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777"></rect></svg>
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>Punch Store</h1>
                            <p>Тільки оригінальне знаряддя</p>

                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="cover" src="~/Content/mma.jpg" />
                    <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777"></rect></svg>
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>100% якість</h1>
                            <p>Усе приладдя привезено з США. Саме тому ми гарантуємо високу якість та невеликі ціни</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="cover" src="~/Content/wp2898167.jpg" />
                    <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777"></rect></svg>
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1>Швидкість</h1>
                            <p>Зробіть перше замовлення, наш оператор зв'яжеться з Вами протягом декількох хвилин</p>

                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    <div class="container-fluid">
        <div class="row panel" style="min-height:92.3vh;">
            <div id="genres" class="col-lg-2 hidden p-0" style="background-color:#6c757d;">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-12 col-lg-10">
                @RenderBody()
                <div class="row d-flex align-bottom">
                    <footer class="container pt-5">
                        <hr class="featurette-divider">
                        <p class="text-center">Made by: <a href="https://www.linkedin.com/in/trambovetskyi-oleksandr/">Oleksander Trambovetskyi</a> © 2019-2020 Punch-Store. · <a href="/About/Index">About</a></p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modDialog" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Ви додали товар до кошику!</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <dl class="dl-horizontal">
                        <dd><div class="text-center">Можете продовжувати перегляд товарів, або перейти до кошику та почати опрацьовувати Ваше замовлення</div></dd>
                    </dl>
                </div>
                <div class="modal-footer border-top-0 d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Добре</button>
                    @Html.ActionLink("Кошик", "Index", "Cart", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/lightbox.js"></script>
    <script type="text/javascript" src="~/Scripts/load.js"></script>
    <script type="text/javascript" src="https://spikmi.com/Widget?Id=2021"></script>
</body>
</html>