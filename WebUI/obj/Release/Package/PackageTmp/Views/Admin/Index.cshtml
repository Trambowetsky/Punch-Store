@model IEnumerable<Domain.Entities.SportsProduct>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2> Список товарів     @Html.ActionLink("Вийти", "Logoff", "Account", null, new
                                {
                                @class = "btn btn-warning"
                                })
        </h2>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Дії
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.ProductID
                    </td>
                    <td>
                        @Html.ActionLink(item.ProductName, "Edit", new { item.ProductID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductID", item.ProductID)
                            <input type="submit" class="btn btn-primary" value="Видалити" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Додати", "Create", "Admin", new
        {
        @class = "btn btn-danger"
        })
        @Html.ActionLink("Замовлення", "Purchases", "Admin", new
        {
        @class = "btn btn-secondary"
        })
        @Html.ActionLink("На головну", "List", "Products", null, new
        {
        @class = "btn btn-primary"
        })
    </div>
</div>